{
  "AWSTemplateFormatVersion" : "2010-09-09",

  "Description" : "Defining Roles for Visitor Assessment",

  "Parameters": {
    "VisitorDBArn": {
      "Description": "Name of DynamoDB table",
      "Type": "String"
    }
  },
  
  "Resources" : {

    "LambdaRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [{
            "Action": "sts:AssumeRole",
            "Effect": "Allow",
            "Principal": { "Service": "lambda.amazonaws.com" }
          }]
        },
        "ManagedPolicyArns": ["arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole"]
      }
    },

    "ApiGwCWRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [{
            "Effect": "Allow",
            "Principal": { "Service": ["apigateway.amazonaws.com"] },
            "Action": ["sts:AssumeRole"]
          }]
        },
        "ManagedPolicyArns": ["arn:aws:iam::aws:policy/service-role/AmazonAPIGatewayPushToCloudWatchLogs"]
      }
    },

    "LambdaRolePolicy": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [{
            "Action": [
              "dynamodb:BatchWriteItem",
              "dynamodb:PutItem",
              "dynamodb:UpdateItem"
            ],
            "Effect": "Allow",
            "Resource": { "Ref" : "VisitorDBArn" }
          },{
            "Action": [
              "dynamodb:BatchGetItem",
              "dynamodb:GetRecords",
              "dynamodb:GetShardIterator",
              "dynamodb:Query",
              "dynamodb:GetItem",
              "dynamodb:Scan"
            ],
            "Effect": "Allow",
            "Resource": { "Ref" : "VisitorDBArn" }
          }]
        },
        "PolicyName": "LambdaRolePolicy",
        "Roles": [{"Ref": "LambdaRole"}]
      }
    }
  },
  
  "Outputs" : {
    "LambdaRoleArn" : {
      "Description" : "Role definition for Lambda",
      "Value": {"Fn::GetAtt": ["LambdaRole","Arn"]}
    },
    "ApiLogRoleArn" : {
      "Description" : "Role definition for API Gateway CloudWatch",
      "Value": {"Fn::GetAtt": ["ApiGwCWRole","Arn"]}
    }
  }
}